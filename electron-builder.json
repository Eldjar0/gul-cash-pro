{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "app.lovable.gulcashpro",
  "productName": "Gul Cash Pro",
  "copyright": "Copyright Â© 2024 Gul Cash Pro",
  "extends": null,
  "main": "electron/main.cjs",
  "npmRebuild": false,
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "!node_modules/canvas/**/*"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public",
      "filter": ["**/*"]
    }
  ],
  "publish": {
    "provider": "github",
    "owner": "YOUR_GITHUB_USERNAME",
    "repo": "gul-cash-pro",
    "releaseType": "release"
  },
  "win": {
    "target": "nsis",
    "artifactName": "GulCashPro-${version}-Windows.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Gul Cash Pro"
  },
  "mac": {
    "target": "dmg",
    "artifactName": "GulCashPro-${version}-Mac.${ext}",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": "AppImage",
    "artifactName": "GulCashPro-${version}-Linux.${ext}",
    "category": "Office"
  }
}